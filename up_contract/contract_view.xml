                            <newline/>
                            <group colspan="2" col="4">
                                <field name="obtain_date"/>
                                <field name="handler"/>
                            </group>
                        </group>
                        <group></group>
                        <group colspan="2">
                            <field name="invoice_ids" domain="[('contract_id','=',contract_id)]"/>
                            <field name="comment"/>
                        </group>
                    </group>

                </form>
            </field>
        </record>

