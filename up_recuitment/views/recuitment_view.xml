<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!--document.directory.access-->
        <record id="view_recuitment_manage_tree" model="ir.ui.view">
            <field name="name">hr.member.tree</field>
            <field name="model">hr.member</field>
            <field name="arch" type="xml">
                <tree string="Access" version="7.0">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="gender"/>
                    <field name="folk"/>
                    <field name="academy"/>
                    <field name="major"/>
                    <field name="moblie"/>
                    <field name="qq"/>
                </tree>
            </field>
        </record>
        <record id="view_recuitment_manage_form" model="ir.ui.view">
            <field name="name">hr.member.tree</field>
            <field name="model">hr.member</field>
            <field name="arch" type="xml">
                <form string="Recuitment" version="7.0">
                    <sheet>
                        <div class="oe_left">
                            <field name="image" widget='image' class="oe_avatar" placeholder="ç…§ç‰‡"
                                   options='{"preview_image": "image", "size": [90,90]}'/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group colspan="2">
                            <group>
                                <field name="type"/>
                                <field name="gender"/>
                                <field name="birthday"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="academy"/>
                                <field name="major"/>
                                <field name="moblie"/>
                                <field name="qq"/>
                                <field name="native_place"/>
                                <field name="folk"/>
                            </group>
                        </group>
                        <group>
                            <field name="resume"/>
                            <field name="works"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>