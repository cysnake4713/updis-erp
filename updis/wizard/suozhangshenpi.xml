<openerp>
	<data>
		<record id="project_review_suozhangshenpi_form_form_view" model="ir.ui.view">			
			<field name="name">project.review.suozhangshenpi.form.view</field>
			<field name="model">project.review.suozhangshenpi.form</field>
			<field name="arch" type="xml">
				<form string="suozhangshenpi" version="7.0">
					<field name="state" widget="statusbar" readonly="1" statusbar_visible="submitted,draft"/>
					<group string="基本信息" col="4">
						<field name="guimo" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
						<field name="jianyishejibumen_id" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
						<field name="jianyixiangmufuzeren_id" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
						<field name="jiafang_id" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>	
						<field name="waibao" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
						<field name="shizhenpeitao" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
						<field name="duofanghetong" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>						
						<field name="shifoutoubiao" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>	
					</group>
					<group string="项目内容" col="4">						
						<field name="yaoqiuxingchengwenjian" attrs="{'readonly':[('state','=','draft')]}"/>	
						<field name="yinhanyaoqiu" attrs="{'readonly':[('state','=','draft')]}"/>	
						<field name="difangfagui" attrs="{'readonly':[('state','=','draft')]}"/>		
						<field name="fujiayaoqiu" attrs="{'readonly':[('state','=','draft')]}"/>		
						<field name="hetongyizhi" attrs="{'readonly':[('state','=','draft')]}"/>	
						<field name="ziyuan" attrs="{'readonly':[('state','=','draft')]}"/>		
						<field name="shebei" attrs="{'readonly':[('state','=','draft')]}"/>		
						<field name="gongqi" attrs="{'readonly':[('state','=','draft')]}"/>		
						<field name="shejifei" attrs="{'readonly':[('state','=','draft')]}"/>	
					</group>
					<group string="明示要求" col="4">
						<!-- 明示要求 -->
						<field name="zhaobiaoshu" attrs="{'readonly':[('state','=','draft')]}" />		
						<field name="weituoshu" attrs="{'readonly':[('state','=','draft')]}" />	
						<field name="xieyicaoan" attrs="{'readonly':[('state','=','draft')]}" />		
						<field name="koutouyaoqiujilu" attrs="{'readonly':[('state','=','draft')]}" />
					</group>
					<group string="通知设置">
						<field name="send_email" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>	
						<field name="send_sms" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
					</group>
					<group string="Review Comment">
						<field name="review_log" />
						<field name="reviewer_id" domain="[('groups_id','=',%(group_up_project_suozhang)d)]"  attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
						<field name="comment" />
					</group>
					<footer>
						<button name="suozhangshenpi_review_submit" string="提交所长审批" states="draft" class="oe_highlight"/>
						<button name="suozhangshenpi_review_accept" string="审批通过" states="submitted" class="oe_highlight"/>
						<button name="suozhangshenpi_review_reject" string="打回" states="submitted" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>
