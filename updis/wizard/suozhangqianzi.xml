<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="project_review_suozhangqianzishenpi_form_form_view" model="ir.ui.view">
			<field name="name">project.review.suozhangqianzishenpi.form.form.view</field>
			<field name="model">project.review.suozhangqianzishenpi.form</field>
			<field name="arch" type="xml">
				<form string="suozhangqianzishenpishenpi" version="7.0">
					<field name="state" widget="statusbar" readonly="1" statusbar_visible="submitted,draft"/>				
					<group string="通知设置">
						<field name="send_email" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>	
						<field name="send_sms" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
					</group>
					<group string="Review Comment">
						<field name="review_log" />
						<field name="reviewer_id" domain="[('groups_id','=',%(group_up_project_suozhang)d)]"  attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
						<field name="comment" />
					</group>
					<footer>
						<button name="suozhangqianzishenpi_review_submit" string="提交所长签字" states="draft" class="oe_highlight"/>
						<button name="suozhangqianzishenpi_review_accept" string="审批通过" states="submitted" class="oe_highlight"/>
						<button name="suozhangqianzishenpi_review_reject" string="打回" states="submitted" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>
	</data>
</openerp>