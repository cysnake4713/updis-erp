<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<record id="updis_res_user_inherit" model="ir.ui.view">
			<field name="name">res.users.form.inherit</field>
			<field name="model">res.users</field>
			<field name="inherit_id" ref="base.view_users_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='image']" position="after">
					<field name="sign_image" widget="image" class="oe_avatar oe_left" groups="base.group_no_one"/>
				</xpath>
			</field>
		</record>

        <record id="view_res_user_preference_form_inherit" model="ir.ui.view">
            <field name="name">res.user.preference.form.inherit.matt</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lang']" position="after">
                    <field mode="tree" name="employee_ids" widget="one2many" nolabel="1" class="oe_inline oe_no_button">
                        <tree editable="top">
                            <field name="folk"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
	</data>
</openerp>