<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project.view_project"/>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to start a new project.
                </p>
                <p>
                    Projects are used to organize your activities; plan
                    tasks, track issues, invoice timesheets. You can define
                    internal projects (R&amp;D, Improve Sales Process),
                    private projects (My Todos) or customer ones.
                </p>
                <p>
                    You will be able collaborate with internal users on
                    projects or invite customers to share your activities.
                </p>
            </field>
        </record>


        <record id="edit_project_inherit" model="ir.ui.view">
            <field name="name">project.project.form.replace</field>
            <field name="model">project.project</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Project" version="7.0">
                    <header name="project_header">
                        <field name="state" widget="statusbar"
                               readonly="1"/>
                    </header>
                    <sheet>
                        <group invisible="1">
                            <field name="is_project_created"/>
                            <field name="is_project_creater"/>
                            <field name="is_user_in_operator_group"/>
                            <field name="is_user_in_engineer_group"/>
                            <field name="is_user_is_project_manager"/>
                        </group>
                        <div>
                            <h1>
                                <field name="name" placeholder="Project Name"
                                       attrs="{'readonly':[('is_project_created','=',True),('is_project_creater','=',False)]}"
                                        />
                            </h1>
                        </div>
                        <group>

                            <field name="project_type" class="oe_no_button"
                                   attrs="{'readonly':[('is_project_created','=',True),('is_project_creater','=',False)]}">
                                <form>
                                    <field name="name"/>
                                </form>
                            </field>
                            <label string="Project Location" for="country_id"/>
                            <div class="address_format">
                                <field name="country_id" class="oe_no_button" widget="selection"
                                       on_change="on_change_country(country_id)" style="width: 15%%"
                                       options="{'no_open':True}" nolabel="1" placeholder="Country"
                                       attrs="{'readonly':[('is_project_created','=',True),('is_project_creater','=',False)]}"/>
                                <field name="state_id" widget="selection" options="{'no_open':True}" placeholder="State"
                                       nolabel="1" style="width: 30%%"
                                       attrs="{'readonly':[('is_project_created','=',True),('is_project_creater','=',False)]}"/>
                                <field name="city" nolabel="1" placeholder="City" style="width: 50%%"
                                       attrs="{'readonly':[('is_project_created','=',True),('is_project_creater','=',False)]}"/>
                            </div>
                            <field name="user_id"/>

                        </group>
                        <notebook>
                            <page name="project_related_info" string="Project Info">
                                <div>
                                    <div name="project_active_area">
                                        <div class="area-header">
                                            <h3>项目启动文档</h3>
                                            <table class="oe_form_group">
                                                <thead>
                                                    <th>文档名</th>
                                                    <th>状态</th>
                                                    <th>提示</th>
                                                </thead>
                                                <tbody>
                                                    <div name="related_forms"/>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </page>
                            <page name="project_log" string="Project Logs">
                                <field name="project_logs" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="log_date"/>
                                        <field name="log_user"/>
                                        <field name="log_info"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

        <!--Project related to Chief Engineer Room-->
        <record id="action_project_related_to_me" model="ir.actions.server">
            <field name="name">action.project.related.to.me</field>
            <field name="state">code</field>
            <field name="condition" eval="True"/>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="code">
action = self.related_to_me_action(cr,uid,context=context)
            </field>
        </record>
        <menuitem name="Project Related To Me" id="project_related_to_me"
                  parent="project.menu_project_management"
                  action="action_project_related_to_me" sequence="4"/>


        <!--project sms config-->
        <record id="project_config_sms_form" model="ir.ui.view">
            <field name="name">project.config.sms.form</field>
            <field name="model">project.config.sms</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Project SMS Config">
                    <field name="name"/>
                    <field name="users"/>
                </form>
            </field>
        </record>
        <record id="project_config_sms_tree" model="ir.ui.view">
            <field name="name">project.config.sms.tree</field>
            <field name="model">project.config.sms</field>
            <field name="arch" type="xml">
                <tree string="Project SMS Config">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="act_project_config_sms" model="ir.actions.act_window">
            <field name="name">Project Config SMS</field>
            <field name="res_model">project.config.sms</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem name="Project Sms Config" id="project_config_sms_menu" parent="base.menu_definitions"
                  action="act_project_config_sms" groups="up_project.group_up_project_admin"/>

        <!--project Profession config-->
        <record id="project_config_profession_form" model="ir.ui.view">
            <field name="name">project.profession.form</field>
            <field name="model">project.profession</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Project Profession Config">
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="project_config_profession_tree" model="ir.ui.view">
            <field name="name">project.profession.tree</field>
            <field name="model">project.profession</field>
            <field name="arch" type="xml">
                <tree string="Project Profession Config">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="act_project_config_profession" model="ir.actions.act_window">
            <field name="name">Project Config Profession</field>
            <field name="res_model">project.profession</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem name="Project Profession Config" id="project_config_profession_menu" parent="base.menu_definitions"
                  action="act_project_config_profession" groups="up_project.group_up_project_admin"/>
    </data>
</openerp>
