<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="project_project_wizard_form" model="ir.ui.view">
            <field name="name">project.project.wizard.form</field>
            <field name="model">project.project.wizard</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Wizard Form">
                    <group>
                        <field name="user_id"/>
                    </group>
                    <div>
                        <button name="project_admin_change_accept" class="oe_highlight"
                                groups="up_project.group_up_project_admin" string="修改"
                                type="object"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="project_project_wizard_action" model="ir.actions.act_window">
            <field name="name">project.project.wizard.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.project.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="project_project_wizard_form"/>
            <field name="target">new</field>
        </record>


        <record id="project.view_project" model="ir.ui.view">
            <field name="name">project.project.tree.replace</field>
            <field name="model">project.project</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree fonts="bold:message_unread==True"
                      colors="red:date and (date&lt;current_date) and (state == 'open');blue:state in ('draft','pending');grey: state in ('close','cancelled')"
                      string="Projects">
                    <field name="sequence" invisible="1" widget="handle"/>
                    <field name="message_unread" invisible="1"/>
                    <field name="date" invisible="1"/>
                    <field name="xiangmubianhao"/>
                    <field name="name" string="Project Name"/>
                    <field name="user_id" string="Project Manager"/>
                    <field name="partner_id" string="Contact"/>
                    <field name="state"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="project.view_project_project_filter" model="ir.ui.view">
            <field name="name">project.project.select.replace</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <search string="Search Project">
                    <field name="xiangmubianhao" string="Project Num"/>
                    <field name="name" string="Project Name"/>
                    <field name="partner_id" string="Customer"/>
                    <separator/>
                    <filter string="Project(s) Manager" domain="[('user_id','=',uid)]"
                            help="Projects in which I am a manager" icon="terp-personal"/>
                    <field name="user_id" string="Project Manager"/>
                    <group expand="0" string="Group By...">
                        <filter string="state" name="Manager" icon="terp-personal" domain="[]"
                                context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="edit_project_inherit" model="ir.ui.view">
            <field name="name">project.project.form.replace</field>
            <field name="model">project.project</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Project" version="7.0">
                    <header name="project_header">
                        <div name="project_header"/>
                        <button name="%(project_project_wizard_action)d"
                                string="修改项目基本属性"
                                type="action" groups="up_project.group_up_project_admin"/>
                        <field name="state" widget="statusbar"
                               readonly="1"/>
                    </header>
                    <sheet>
                        <group invisible="1">
                            <field name="is_project_created"/>
                            <field name="is_project_creater"/>
                            <field name="is_user_in_operator_group"/>
                            <field name="is_user_in_engineer_group"/>
                            <field name="is_user_is_project_manager"/>
                        </group>
                        <div class="oe_title oe_long_title">
                            <h1>
                                <field name="name" placeholder="Project Name"
                                       attrs="{'readonly':['|',('is_project_created','=',True),('is_project_creater','=',False),('state','!=','project_active')]}"
                                        />
                            </h1>
                        </div>
                        <div attrs="{'invisible':[('state','=','project_active')]}" class="oe_right inline-item">
                            <span>项目编号:</span>
                            <field name="xiangmubianhao" readonly="1"/>
                        </div>
                        <group col="2">
                            <label string="Project Location" for="country_id"/>
                            <div class="address_format">
                                <field name="country_id" class="oe_no_button" widget="selection"
                                       on_change="on_change_country(country_id)" style="width: 15%%"
                                       options="{'no_open':True}" nolabel="1" placeholder="Country"
                                       attrs="{'readonly':['|',('is_project_created','=',True),('is_project_creater','=',False),('state','!=','project_active')]}"/>
                                <field name="state_id" widget="selection" options="{'no_open':True}"
                                       placeholder="State"
                                       nolabel="1" style="width: 20%%"
                                       attrs="{'readonly':['|',('is_project_created','=',True),('is_project_creater','=',False),('state','!=','project_active')]}"/>
                                <field name="city" nolabel="1" placeholder="City" style="width: 20%%"
                                       attrs="{'readonly':['|',('is_project_created','=',True),('is_project_creater','=',False),('state','!=','project_active')]}"/>
                                <label for="city_type" string="城市类别"/>
                                <field name="city_type" nolabel="1" style="width: 20%%"
                                       attrs="{'readonly':['|',('is_project_created','=',True),('is_project_creater','=',False),('state','!=','project_active')]}"/>
                            </div>
                        </group>
                        <group attrs="{'invisible':[('state','=','project_active')]}">
                            <group string="Partner Info">
                                <field name="partner_type" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="customer_contact" readonly="1"/>
                            </group>
                            <group string="Project Type">
                                <field name="project_type" class="oe_no_button" readonly="1"/>
                                <field name="categories_id" readonly="1"/>
                                <field name="shifoutoubiao" readonly="1"/>
                                <field name="toubiaoleibie" readonly="1"/>
                            </group>
                            <group string="In charge Relate">
                                <field name="zhuguanzongshi_id" readonly="1"/>
                                <field name="chenjiebumen_id" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="guanlijibie" readonly="1"/>
                            </group>
                            <group string="Other Info">
                                <field name="guimo" readonly="1"/>
                                <field name="waibao" readonly="1"/>
                                <field name="shizhenpeitao" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <notebook>
                        <page name="project_related_info" string="Project Document">
                            <div>
                                <div name="project_active_area">
                                    <div class="area-header">
                                        <h3>项目启动文档</h3>
                                        <table class="oe_form_group">
                                            <thead>
                                                <th>文档名</th>
                                                <th>状态</th>
                                                <th>提示</th>
                                            </thead>
                                            <tbody>
                                                <div name="related_forms"/>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page name="project_comment" string="Project Comments">
                            <group>
                                <field name="questions"/>
                                <field name="primary_work"/>
                                <field name="next_work_plan"/>
                            </group>
                        </page>
                        <page name="project_log" string="Project Logs">
                            <field name="project_logs" nolabel="1" readonly="1">
                                <tree>
                                    <field name="log_date"/>
                                    <field name="log_user"/>
                                    <field name="log_info"/>
                                </tree>
                            </field>
                        </page>

                    </notebook>

                </form>
            </field>
        </record>

        <!--Project related to Chief Engineer Room-->
        <record id="action_project_related_to_me" model="ir.actions.server">
            <field name="name">action.project.related.to.me</field>
            <field name="state">code</field>
            <field name="condition" eval="True"/>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="code">
                action = self.related_to_me_action(cr,uid,context=context)
            </field>
        </record>
        <menuitem name="Project Related To Me" id="project_related_to_me"
                  parent="project.menu_project_management"
                  action="action_project_related_to_me" sequence="4"/>


        <record id="open_view_project_all" model="ir.actions.server">
            <field name="name">Action Projects</field>
            <field name="state">code</field>
            <field name="condition" eval="True"/>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="code">
                action = self.all_projects_action(cr,uid,context=context)
            </field>
        </record>
        <menuitem action="open_view_project_all" id="project.menu_projects" name="Projects"
                  parent="project.menu_project_management" sequence="10"/>

        <!--project sms config-->
        <record id="project_config_sms_form" model="ir.ui.view">
            <field name="name">project.config.sms.form</field>
            <field name="model">project.config.sms</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Project SMS Config">
                    <field name="name"/>
                    <field name="users"/>
                </form>
            </field>
        </record>
        <record id="project_config_sms_tree" model="ir.ui.view">
            <field name="name">project.config.sms.tree</field>
            <field name="model">project.config.sms</field>
            <field name="arch" type="xml">
                <tree string="Project SMS Config">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="act_project_config_sms" model="ir.actions.act_window">
            <field name="name">Project Config SMS</field>
            <field name="res_model">project.config.sms</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem name="Project Sms Config" id="project_config_sms_menu" parent="base.menu_definitions"
                  action="act_project_config_sms" groups="up_project.group_up_project_admin"/>

        <!--project Profession config-->
        <record id="project_config_profession_form" model="ir.ui.view">
            <field name="name">project.profession.form</field>
            <field name="model">project.profession</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Project Profession Config">
                    <group col="4">
                        <field name="name"/>
                        <field name="short_name"/>
                        <field name="order_num"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="project_config_profession_tree" model="ir.ui.view">
            <field name="name">project.profession.tree</field>
            <field name="model">project.profession</field>
            <field name="arch" type="xml">
                <tree string="Project Profession Config">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="act_project_config_profession" model="ir.actions.act_window">
            <field name="name">Project Config Profession</field>
            <field name="res_model">project.profession</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem name="Project Profession Config" id="project_config_profession_menu" parent="base.menu_definitions"
                  action="act_project_config_profession" groups="up_project.group_up_project_admin"/>
    </data>
</openerp>
