<?xml version="1.0"?>
<openerp>
    <data>
        <record model="workflow" id="wkf_up_project">
            <field name="name">项目启动流程</field>
            <field name="osv">project.project</field>
            <field name="on_create">True</field>
        </record>
        <!-- Activities -->
        <!-- <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_up_project" />
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">dummy</field>
        </record> -->
        <record id="act_open" model="workflow.activity">
            <field name="wkf_id" ref="wkf_up_project"/>
            <field name="name">提出申请</field>
            <field name="flow_start">True</field>
            <field name="kind">function</field>
            <field name="action">init_form('open','project.review.suozhangshenpi.form','suozhangshenpi_form_id')</field>
        </record>
        <record id="act_suozhangshenpi" model="workflow.activity">
            <field name="wkf_id" ref="wkf_up_project"/>
            <field name="name">所长审批</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'suozhangshenpi'})</field>
        </record>
        <record id="act_zhidingbumen" model="workflow.activity">
            <field name="wkf_id" ref="wkf_up_project"/>
            <field name="name">经营室指定设计部门</field>
            <field name="kind">function</field>
            <field name="action">
                init_jinyinshi_form('zhidingbumen','project.review.jingyingshishenpi.form','jingyingshishenpi_form_id')
            </field>
        </record>
        <record id="act_zhidingfuzeren" model="workflow.activity">
            <field name="wkf_id" ref="wkf_up_project"/>
            <field name="name">总师室指定负责人</field>
            <field name="kind">function</field>
            <field name="action">
                init_zongshishi_form('zhidingfuzeren','project.review.zongshishishenpi.form','zongshishishenpi_form_id')
            </field>
        </record>
        <record id="act_suozhangqianzi" model="workflow.activity">
            <field name="wkf_id" ref="wkf_up_project"/>
            <field name="name">所长签字</field>
            <field name="kind">function</field>
            <field name="action">
                init_form('suozhangqianzi','project.review.suozhangqianzishenpi.form','suozhangqianzishenpi_form_id')
            </field>
        </record>
        <record id="act_fuzerenqidong" model="workflow.activity">
            <field name="wkf_id" ref="wkf_up_project"/>
            <field name="name">项目启动</field>
            <field name="kind">function</field>
            <field name="action">
                init_form('fuzerenqidong','project.review.fuzerenqidong.form','fuzerenqidong_form_id')
            </field>
        </record>

        <!-- Transitions -->
        <record id="t1" model="workflow.transition">
            <field name="act_from" ref="act_open"/>
            <field name="act_to" ref="act_suozhangshenpi"/>
            <field name="group_id" ref="project.group_project_user"/>
            <field name="signal">draft_submit</field>
        </record>
        <record id="t2" model="workflow.transition">
            <field name="act_from" ref="act_suozhangshenpi"/>
            <field name="act_to" ref="act_open"/>
            <field name="group_id" ref="up_project.group_up_project_suozhang"/>
            <field name="signal">draft_reject</field>
        </record>

        <record id="t3" model="workflow.transition">
            <field name="act_from" ref="act_suozhangshenpi"/>
            <field name="act_to" ref="act_zhidingbumen"/>
            <field name="group_id" ref="up_project.group_up_project_suozhang"/>
            <field name="signal">suozhangshenpi_submit</field>
        </record>
        <record id="t4" model="workflow.transition">
            <field name="act_from" ref="act_zhidingbumen"/>
            <field name="act_to" ref="act_suozhangshenpi"/>
            <field name="group_id" ref="up_project.group_up_project_jingyingshi"/>
            <field name="signal">suozhangshenpi_reject</field>
        </record>

        <record id="t5" model="workflow.transition">
            <field name="act_from" ref="act_zhidingbumen"/>
            <field name="act_to" ref="act_zhidingfuzeren"/>
            <field name="group_id" ref="up_project.group_up_project_jingyingshi"/>
            <field name="signal">jingyinshi_submit</field>
        </record>
        <record id="t6" model="workflow.transition">
            <field name="act_from" ref="act_zhidingfuzeren"/>
            <field name="act_to" ref="act_zhidingbumen"/>
            <field name="group_id" ref="up_project.group_up_project_zongshishi"/>
            <field name="signal">jingyinshi_reject</field>
        </record>

        <record id="t7" model="workflow.transition">
            <field name="act_from" ref="act_zhidingfuzeren"/>
            <field name="act_to" ref="act_suozhangqianzi"/>
            <field name="group_id" ref="up_project.group_up_project_zongshishi"/>
            <field name="signal">zongshishi_submit</field>
        </record>
        <record id="t8" model="workflow.transition">
            <field name="act_from" ref="act_suozhangqianzi"/>
            <field name="act_to" ref="act_zhidingfuzeren"/>
            <field name="group_id" ref="up_project.group_up_project_suozhang"/>
            <field name="signal">zongshishi_reject</field>
        </record>
        <record id="t9" model="workflow.transition">
            <field name="act_from" ref="act_suozhangqianzi"/>
            <field name="act_to" ref="act_fuzerenqidong"/>
            <field name="group_id" ref="up_project.group_up_project_suozhang"/>
            <field name="signal">fuzeren_submit</field>
        </record>
        <record id="t10" model="workflow.transition">
            <field name="act_from" ref="act_fuzerenqidong"/>
            <field name="act_to" ref="act_suozhangqianzi"/>
            <field name="group_id" ref="up_project.group_up_project_manager"/>
            <field name="signal">fuzeren_reject</field>
        </record>
    </data>
</openerp>