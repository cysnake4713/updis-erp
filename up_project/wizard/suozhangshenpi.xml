    <data>
        <record id="project_prject_suozhangshenpi_form_inherit" model="ir.ui.view">
            <field name="name">project.project.suozhangshenpi.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="edit_project_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='basic_info']" position="after">
                    <group string="Review">
                        <field name="yaoqiuxingchengwenjian" readonly="1"/>
                        <field name="hetongyizhi" readonly="1"/>
                    </group>
                    <newline/>
                    <group string="设计要求是否达到规定">
                        <field name="express_requirement" readonly="1"/>
                        <field name="yinhanyaoqiu" readonly="1"/>
                        <field name="difangfagui" readonly="1"/>
                        <field name="fujiayaoqiu" readonly="1"/>
                    </group>
                    <group string="Attachment">

                    </group>
                    <group string="本院是否有能力满足规定要求">
                        <field name="ziyuan" readonly="1"/>
                        <field name="shebei" readonly="1"/>
                        <field name="gongqi" readonly="1"/>
                        <field name="shejifei" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="project_review_suozhangshenpi_form_form_view" model="ir.ui.view">
            <field name="name">project.review.suozhangshenpi.form.view</field>
            <field name="model">project.review.suozhangshenpi.form</field>
            <field name="arch" type="xml">
                <form string="suozhangshenpi" version="7.0">
                    <field name="state" widget="statusbar" readonly="1"/>
                    <group string="Review">
                        <field name="yaoqiuxingchengwenjian" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="hetongyizhi" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                    <newline/>
                    <group string="设计要求是否达到规定">
                        <field name="express_requirement" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="yinhanyaoqiu" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="difangfagui" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="fujiayaoqiu" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                    <group string="Attachment">

                    </group>
                    <group string="本院是否有能力满足规定要求">
                        <field name="ziyuan" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="shebei" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="gongqi" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="shejifei" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                    <group>
                        <field name="reviewer_id"/>
                    </group>

                    <footer>
                        <button name="save"  class="oe_highlight" string="Save" states="draft"/>
                        <button name="suozhangshenpi_review_submit" string="提交所长审批" states="draft"
                                class="oe_highlight"/>
                        <button name="suozhangshenpi_review_accept" string="审批通过" states="submitted"
                                class="oe_highlight"/>
                        <button name="suozhangshenpi_review_reject" string="打回" states="submitted"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
