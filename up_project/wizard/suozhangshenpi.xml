<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="project_review_suozhangshenpi_form_form_view" model="ir.ui.view">
            <field name="name">project.review.suozhangshenpi.form.view</field>
            <field name="model">project.review.suozhangshenpi.form</field>
            <field name="arch" type="xml">
                <form string="suozhangshenpi" version="7.0">
                    <group col="2">
                        <group string="Basic Info" col="1">
                            <group col="2">
                                <field name="jianyishejibumen_id" required="1" class="oe_no_button"
                                       options='{"no_open": True}'/>
                                <field name="jianyixiangmufuzeren_id" required="1" class="oe_no_button"
                                       options='{"no_open": True}'/>
                                <field name="shifoutoubiao"/>
                                <field name="toubiaoleibie"
                                       attrs="{'invisible':[('shifoutoubiao','=',False)],'required':[('shifoutoubiao','=',True)]}"/>
                                <field name="waibao"/>
                                <field name="shizhenpeitao"/>
                                <field name="duofanghetong"/>
                            </group>
                        </group>
                        <group string="Custom Require">
                            <field name="yaoqiuxingchengwenjian" required="1" class="oe_no_button"/>
                            <field name="hetongyizhi" required="1" class="oe_no_button"/>
                        </group>
                        <newline/>
                        <group string="设计要求是否达到规定">
                            <field name="express_requirement" required="1" class="oe_no_button"/>
                            <field name="yinhanyaoqiu" required="1" class="oe_no_button"/>
                            <field name="difangfagui" required="1" class="oe_no_button"/>
                            <field name="fujiayaoqiu" required="1" class="oe_no_button"/>
                        </group>
                        <group string="Attachment">

                        </group>
                        <group string="本院是否有能力满足规定要求">
                            <field name="ziyuan" required="1" class="oe_no_button"/>
                            <field name="shebei" required="1" class="oe_no_button"/>
                            <field name="gongqi" required="1" class="oe_no_button"/>
                            <field name="shejifei" required="1" class="oe_no_button"/>
                        </group>

                        <group string="Reviewer">
                            <field name="reviewer_id" required="1"
                                   domain="[('groups_id','=',%(group_up_project_suozhang)d)]"
                                   attrs="{'readonly':[('state','!=','open')]}" class="oe_no_button"
                                   options='{"no_open": True}'/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="save" class="oe_highlight" string="Save"/>
                        <button name="suozhangshenpi_review_submit" string="提交所长审批" states="" type="object"
                                class="oe_highlight" confirm="确定提交到所长审批?"
                                attrs="{'invisible':[('state','!=','open')]}"/>
                        <button name="suozhangshenpi_review_accept" string="审批通过" states="" type="object"
                                class="oe_highlight" confirm="确定提交到向经营室审批?"
                                attrs="{'invisible':[('state','=','open')]}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="project_project_suozhangshenpi_form_inherit" model="ir.ui.view">
            <field name="name">project.project.suozhangshenpi.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="edit_project_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_suozhangshenpi" class="oe_highlight" string="提交所长审批"
                            type="object"
                            attrs="{'invisible':['|',('is_project_creater','!=',True),('state','!=','open')]}"
                            groups="project.group_project_user"/>
                    <button name="action_suozhangshenpi" class="oe_highlight" string="提交经营室审批"
                            type="object"
                            attrs="{'invisible':['|',('is_display_button','!=',True),('state','!=','suozhangshenpi')]}"
                            groups="up_project.group_up_project_suozhang"/>
                    <button name="draft_reject" string="打回申请单" type="object"
                            attrs="{'invisible':['|',('is_display_button','!=',True),('state','!=','suozhangshenpi')]}"
                            groups="up_project.group_up_project_suozhang" confirm="确定打回申请到发起人?"/>
                </xpath>
                <xpath expr="//div[@id='director_prove']" position="replace" priority="1">
                    <div attrs="{'invisible':[('state','=','open')]}">
                        <table class="oe_form_group activetable" col="5">
                            <thead class="oe_form_group_row">
                                <th class="oe_form_group_cell">序号</th>
                                <th class="oe_form_group_cell" colspan="2">评审内容</th>
                                <th class="oe_form_group_cell">评审意见</th>
                                <th class="oe_form_group_cell">评审人</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td colspan="2">顾客要求形成文件否</td>
                                    <td>
                                        <field name="yaoqiuxingchengwenjian" readonly="1"/>
                                    </td>
                                    <td rowspan="8">
                                        <field name="director_apply_submitter_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td rowspan="4">2</td>
                                    <td rowspan="4">设计要求是否得到规定</td>
                                    <td>明示要求</td>
                                    <td>
                                        <field name="express_requirement" readonly="1"/>
                                        <group string="Attachment">

                                        </group>
                                    </td>
                                </tr>
                                <tr>
                                    <td>隐含要求</td>
                                    <td>
                                        <field name="yinhanyaoqiu" readonly="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>地方规范或特殊法律法规</td>
                                    <td>
                                        <field name="difangfagui" readonly="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>附加要求</td>
                                    <td>
                                        <field name="fujiayaoqiu" readonly="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td colspan="2">与以前表述不一致的合同/协议要求是否解决</td>
                                    <td>
                                        <field name="hetongyizhi" readonly="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td colspan="2">本院是否有能力满足规定要求</td>
                                    <td>
                                        <field name="ziyuan" readonly="1"/>
                                        <field name="shebei" readonly="1"/>
                                        <field name="gongqi" readonly="1"/>
                                        <field name="shejifei" readonly="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>5</td>
                                    <td colspan="2">其它</td>
                                    <td>
                                        <div class="inline-item"
                                             attrs="{'invisible':[('state','not in',['open','suozhangshenpi','zhidingbumen'])]}">
                                            建议设计部门:
                                            <field name="jianyishejibumen_id" readonly="1"/>
                                        </div>
                                        <div class="inline-item"
                                             attrs="{'invisible':[('state','not in',['open','suozhangshenpi','zhidingbumen','zhidingfuzeren'])]}">
                                            建议项目负责人:
                                            <field name="jianyixiangmufuzeren_id" readonly="1"/>
                                        </div>
                                        <div class="inline-item">
                                            是否外包:
                                            <field name="waibao" readonly="1"/>
                                        </div>
                                        <div class="inline-item">
                                            市政配套:
                                            <field name="shizhenpeitao" readonly="1"/>
                                        </div>
                                        <div class="inline-item">
                                            多方合同:
                                            <field name="duofanghetong" readonly="1"/>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <group invisible="1">
                        <field name="is_display_button"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>