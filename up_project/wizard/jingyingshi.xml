<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="project_review_jingyingshishenpi_form_form_view" model="ir.ui.view">
            <field name="name">project.review.jingyingshishenpi.form.view</field>
            <field name="model">project.review.jingyingshishenpi.form</field>
            <field name="arch" type="xml">
                <form string="jingyingshishenpishenpi" version="7.0">
                    <group string="经营室指定设计部门" col="4">
                        <field name="xiangmubianhao" required="1"/>
                        <newline/>
                        <field name="pingshenfangshi" required="1" class="oe_no_button"/>
                        <field name="yinfacuoshi" required="1" class="oe_no_button"/>
                        <field name="renwuyaoqiu" required="1" class="oe_no_button"/>
                        <field name="chenjiebumen_id" required="1" class="oe_no_button"
                               options='{"no_open": True}' />
                    </group>
                    <!-- <group string="通知设置">
                        <field name="send_email" />
                        <field name="send_sms" />
                    </group> >
                    <group string="Review Comment">
                        <field name="submitter_id" readonly="1"/>
                        <field name="comment"/>
                    </group-->
                    <footer>
                        <button name="save" class="oe_highlight" string="Save"/>
                        <button name="jingyinshi_review_submit" string="提交总师室审批" class="oe_highlight"
                                type="object" confirm="确定提交到总师室审批?"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="project_project_jingyinshi_form_inherit" model="ir.ui.view">
            <field name="name">project.project.jingyingshishenpi.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="edit_project_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_jingyingshishenpi" class="oe_highlight" string="经营室审批申请单" states="zhidingbumen"
                            type="object" groups="up_project.group_up_project_jingyingshi"/>
                    <button name="suozhangshenpi_reject" string="打回申请单" states="zhidingbumen" type="object"
                            groups="up_project.group_up_project_jingyingshi" confirm="确定打回所长申请?"/>
                </xpath>
                <xpath expr="//group[@name='project_num']" position="replace">
                    <group colspan="2" name="project_num">
                        <field name="xiangmubianhao" readonly="1"
                               attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen'])]}"/>
                    </group>
                </xpath>
                <xpath expr="//div[@id='operator']" position="after" priority="2">
                    <notebook attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen'])]}">
                        <page string="Jinyinshi Info"
                              priority="80">
                            <group colspan="2">
                                <group string="经营室指定设计部门" col="4">
                                    <field name="pingshenfangshi" readonly="1"/>
                                    <field name="yinfacuoshi" readonly="1"/>
                                    <field name="renwuyaoqiu" readonly="1"/>
                                    <field name="chenjiebumen_id" readonly="1"/>
                                    <field name="jinyinshi_submitter_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </xpath>

            </field>
        </record>

    </data>
</openerp>


