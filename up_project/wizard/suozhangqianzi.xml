<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="project_project_suozhangqianzi_form_inherit" model="ir.ui.view">
            <field name="name">project.project.suozhangqianzi.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="edit_project_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="director_approve_submit" confirm="确定启动项目?" class="oe_highlight" string="所长签字审批申请单"
                            attrs="{'invisible':['|',('is_display_button','!=',True),('state','!=','suozhangqianzi')]}"
                            type="object" groups="up_project.group_up_project_suozhang"/>
                    <button name="zongshishi_reject" string="打回申请单" confirm="确定打回项目?"
                            groups="up_project.group_up_project_suozhang" type="object"
                            attrs="{'invisible':['|',('is_display_button','!=',True),('state','!=','suozhangqianzi')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>