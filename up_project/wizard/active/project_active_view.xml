<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="project_project_active_tasking_form" model="ir.ui.view">
            <field name="name">project.project.active.tasking.form</field>
            <field name="model">project.project.active.tasking</field>
            <field name="arch" type="xml">
                <form string="Project" version="7.0">
                    <header>
                        <button name="action_suozhangshenpi" class="oe_highlight" string="提交所长审批"
                                type="object"
                                attrs="{'invisible':['|',('is_project_creater','!=',True),('state','!=','open')]}"
                                groups="project.group_project_user"/>
                        <button name="action_suozhangshenpi" class="oe_highlight" string="提交经营室审批"
                                type="object"
                                attrs="{'invisible':['|',('is_display_button','!=',True),('state','!=','suozhangshenpi')]}"
                                groups="up_project.group_up_project_suozhang"/>
                        <button name="draft_reject" string="打回申请单" type="object"
                                attrs="{'invisible':['|',('is_display_button','!=',True),('state','!=','suozhangshenpi')]}"
                                groups="up_project.group_up_project_suozhang" confirm="确定打回申请到发起人?"/>
                        <button name="action_jingyingshishenpi" class="oe_highlight" string="经营室审批申请单"
                                states="zhidingbumen"
                                type="object" groups="up_project.group_up_project_jingyingshi"/>
                        <button name="suozhangshenpi_reject" string="打回申请单" states="zhidingbumen" type="object"
                                groups="up_project.group_up_project_jingyingshi" confirm="确定打回所长申请?"/>
                        <button name="action_zongshishishenpi" class="oe_highlight"
                                groups="up_project.group_up_project_zongshishi" string="总师室审批申请单"
                                states="zhidingfuzeren"
                                type="object"/>
                        <button name="jingyinshi_reject" string="打回申请单" groups="up_project.group_up_project_zongshishi"
                                states="zhidingfuzeren" type="object" confirm="确定打回经营室申请?"/>

                        <field name="state" widget="statusbar"
                               readonly="1"/>
                    </header>
                    <sheet>
                        <group colspan="2" name="project_num">
                            <field name="xiangmubianhao" readonly="1"
                                   attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen'])]}"/>
                        </group>
                        <group>
                            <field name="is_project_creater" invisible="1"/>
                        </group>
                        <group class="activetable" col="4">
                            <field name="name" string="Project Name"
                                   readonly="1" colspan="4"/>

                            <field name="partner_id"
                                   domain="[('is_company','=',True)]"
                                   attrs="{'readonly':[('state','!=','open')]}" required="1"/>
                            <field name="guimo"
                                   attrs="{'readonly':[('state','!=','open')]}"/>
                            <field name="customer_contact"
                                   attrs="{'readonly':[('state','!=','open')]}"/>
                        </group>
                        <div id="director_prove">
                            <div attrs="{'invisible':[('state','=','open')]}">
                                <table class="oe_form_group activetable" col="5">
                                    <thead class="oe_form_group_row">
                                        <th class="oe_form_group_cell">序号</th>
                                        <th class="oe_form_group_cell" colspan="2">评审内容</th>
                                        <th class="oe_form_group_cell">评审意见</th>
                                        <th class="oe_form_group_cell">评审人</th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td colspan="2">顾客要求形成文件否</td>
                                            <td>
                                                <field name="yaoqiuxingchengwenjian" readonly="1"/>
                                            </td>
                                            <td rowspan="8">
                                                <field name="director_apply_submitter_id"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td rowspan="4">2</td>
                                            <td rowspan="4">设计要求是否得到规定</td>
                                            <td>明示要求</td>
                                            <td>
                                                <field name="express_requirement" readonly="1"/>
                                                <group string="Attachment">

                                                </group>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>隐含要求</td>
                                            <td>
                                                <field name="yinhanyaoqiu" readonly="1"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>地方规范或特殊法律法规</td>
                                            <td>
                                                <field name="difangfagui" readonly="1"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>附加要求</td>
                                            <td>
                                                <field name="fujiayaoqiu" readonly="1"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td colspan="2">与以前表述不一致的合同/协议要求是否解决</td>
                                            <td>
                                                <field name="hetongyizhi" readonly="1"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td colspan="2">本院是否有能力满足规定要求</td>
                                            <td>
                                                <field name="ziyuan" readonly="1"/>
                                                <field name="shebei" readonly="1"/>
                                                <field name="gongqi" readonly="1"/>
                                                <field name="shejifei" readonly="1"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>5</td>
                                            <td colspan="2">其它</td>
                                            <td>
                                                <div class="inline-item"
                                                     attrs="{'invisible':[('state','not in',['open','suozhangshenpi','zhidingbumen'])]}">
                                                    建议设计部门:
                                                    <field name="jianyishejibumen_id" readonly="1"/>
                                                </div>
                                                <div class="inline-item"
                                                     attrs="{'invisible':[('state','not in',['open','suozhangshenpi','zhidingbumen','zhidingfuzeren'])]}">
                                                    建议项目负责人:
                                                    <field name="jianyixiangmufuzeren_id" readonly="1"/>
                                                </div>
                                                <div class="inline-item">
                                                    是否外包:
                                                    <field name="waibao" readonly="1"/>
                                                </div>
                                                <div class="inline-item">
                                                    市政配套:
                                                    <field name="shizhenpeitao" readonly="1"/>
                                                </div>
                                                <div class="inline-item">
                                                    多方合同:
                                                    <field name="duofanghetong" readonly="1"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <group invisible="1">
                                <field name="is_display_button"/>
                            </group>
                        </div>
                        <div id="operator">
                            <group class="activetable" col="6"
                                   attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen'])]}">
                                <field name="pingshenfangshi" readonly="1" colspan="3"/>
                                <field name="yinfacuoshi" readonly="1" colspan="3"/>
                                <field name="renwuyaoqiu" readonly="1" colspan="6"/>
                                <field name="chenjiebumen_id" readonly="1" colspan="3"/>
                                <field name="jinyinshi_submitter_id" readonly="1" colspan="2"/>
                                <div>
                                    <field name="jinyinshi_submitter_datetime" readonly="1" colspan="1"/>
                                </div>

                            </group>
                        </div>
                        <div id="engineer">
                            <div attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen','zhidingfuzeren'])]}">
                                <table class="oe_form_group activetable">
                                    <tbody>
                                        <tr>
                                            <td rowspan="3">
                                                <div class="inline-item">类别:
                                                    <field name="categories_id" readonly="1"
                                                           attrs="{'invisible':[('shifoutoubiao','=',True)]}"/>
                                                    <field name="categories_else"
                                                           attrs="{'invisible':[('category_name','!=',u'其它')]}"
                                                           readonly="1"/>
                                                </div>
                                                <div class="inline-item">投标类别:

                                                    <field name="toubiaoleibie"
                                                           attrs="{'invisible':[('shifoutoubiao','=',False)]}"
                                                           readonly="1"/>
                                                </div>
                                                <div class="inline-item">项目管理级别:
                                                    <field name="guanlijibie" readonly="1"/>
                                                </div>
                                                <div class="inline-item">项目负责人:
                                                    <field name="user_id" readonly="1"
                                                           attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen','zhidingfuzeren'])]}"/>
                                                </div>
                                                <div class="inline-item">主管总师:
                                                    <field name="zhuguanzongshi_id" readonly="1"/>
                                                </div>
                                            </td>
                                            <td colspan="2">会签栏</td>
                                        </tr>
                                        <tr>
                                            <td>总师室</td>
                                            <td>
                                                <field name="zongshishi_submitter_id" readonly="1"/>
                                                <field name="zongshishi_submit_datetime" readonly="1"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>承接部门负责人</td>
                                            <td>
                                                <field name="director_approve"/>
                                                <field name="director_approve_time"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>


                            </div>
                            <group>
                                <field name="category_name" invisible="1"/>
                                <field name="shifoutoubiao" readonly="1" invisible="1"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_project_suozhangshenpi_form_inherit" model="ir.ui.view">
            <field name="name">project.project.active.tasking.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="edit_project_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='related_forms']" position="before">
                    <field name="active_tasking" readonly="1" required="0" class="oe_inline"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>