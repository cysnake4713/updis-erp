<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_project_filed_filing_form" model="ir.ui.view">
            <field name="name">project.project.filed.filing.form</field>
            <field name="model">project.project.filed.filing</field>
            <field name="arch" type="xml">
                <form string="Project Filing" version="7.0">
                    <header>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>

                        <div class="sheet-title">
                            <h1>项目文件归档表</h1>
                        </div>
                        <group>
                            <field name="project_id"/>
                            <field name="project_scale"/>
                            <field name="project_category_id"/>
                            <field name="project_country_id"/>
                            <field name="project_state_id"/>
                            <field name="project_city"/>
                            <field name="project_begin_date"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="description"/>
                            <field name="note"/>
                            <field name="record_ids">
                                <tree editable="bottom">
                                    <field name="type_id"/>
                                    <field name="name"/>
                                    <field name="page_count"/>
                                    <field name="copy_count"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>