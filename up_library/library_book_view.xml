<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!--library.book.book-->
        <record id="view_up_library_book_tree" model="ir.ui.view">
            <field name="name">library.book.book.tree</field>
            <field name="model">library.book.book</field>
            <field name="arch" type="xml">
                <tree string="Books" version="7.0">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="type"/>
                    <field name="author"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_up_library_book_form" model="ir.ui.view">
            <field name="name">library.book.book.form</field>
            <field name="model">library.book.book</field>
            <field name="arch" type="xml">
                <form string="Books" version="7.0">
                    <header>
                        <button name="mark_as_scrap" type="object" string="Mask As Scrap" class=""/>
                        <button name="mark_as_lost" type="object" string="Mask As Lost" class=""/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Book Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="category"/>
                                <field name="type"/>
                                <field name="author"/>
                                <field name="publisher"/>
                            </group>
                            <group>
                                <field name="purchase_date"/>
                                <field name="price"/>
                                <field name="quantity"/>
                                <field name="quantity_left"/>
                            </group>
                        </group>
                        <group>
                            <field name="comment" nolabel="1" placeholder="Comment"/>
                        </group>
                        <notebook>
                            <page string="Borrow Record">
                                <field name="record_ids">
                                    <form>
                                        <group>
                                            <group>
                                                <field name="borrower" required="1"/>
                                            </group>
                                            <group>
                                                <field name="borrow_date"
                                                       on_change="on_change_borrow_date(borrow_date)"/>
                                                <field name="due_to_return_date"/>
                                            </group>
                                            <group>
                                                <field name="is_returned"
                                                       on_change="on_change_is_returned(is_returned)"/>
                                            </group>
                                            <group>
                                                <field name="return_date"
                                                       attrs="{'required':[('is_returned','=',True)]}"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Log">
                                <field name="log_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--library.book.record-->
        <record id="view_up_library_book_record_tree" model="ir.ui.view">
            <field name="name">library.book.record.tree</field>
            <field name="model">library.book.record</field>
            <field name="arch" type="xml">
                <tree string="Borrowing Record" version="7.0">
                    <field name="book_id"/>
                    <field name="borrower"/>
                    <field name="borrow_date"/>
                    <field name="due_to_return_date"/>
                    <field name="is_returned"/>
                    <field name="return_date"/>
                </tree>
            </field>
        </record>
        <record id="view_up_library_book_record_form" model="ir.ui.view">
            <field name="name">library.book.record.form</field>
            <field name="model">library.book.record</field>
            <field name="arch" type="xml">
                <form string="Borrowing Record" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="book_id" placeholder="Book Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <group>
                                    <field name="borrower" required="1"/>
                                </group>
                                <group>
                                    <field name="borrow_date" on_change="on_change_borrow_date(borrow_date)"/>
                                    <field name="due_to_return_date"/>
                                </group>
                                <group>
                                    <field name="is_returned" on_change="on_change_is_returned(is_returned)"/>
                                </group>
                                <group>
                                    <field name="return_date" attrs="{'required':[('is_returned','=',True)]}"/>
                                </group>
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>
        <!--library.book.wish-->
        <record id="view_up_library_book_wish_tree" model="ir.ui.view">
            <field name="name">library.book.wish.tree</field>
            <field name="model">library.book.wish</field>
            <field name="arch" type="xml">
                <tree string="Wish Book" version="7.0">
                    <field name="name"/>
                    <field name="author"/>
                    <field name="publisher"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_up_library_book_wish_form" model="ir.ui.view">
            <field name="name">library.book.wish.form</field>
            <field name="model">library.book.wish</field>
            <field name="arch" type="xml">
                <form string="Wish Book" version="7.0">
                    <header>
                        <button name="" type="action" string="Marked As bought" class="oe_highlight"
                                groups="up_library.library_manager"/>
                        <button name="reject_wish_request" type="object" string="Marked As Un bought"
                                groups="up_library.library_manager"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Book Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="author"/>
                                <field name="publisher"/>
                                <field name="price"/>
                            </group>
                            <group>
                                <field name="comment"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--library.book.log-->
        <record id="view_up_library_book_log_tree" model="ir.ui.view">
            <field name="name">library.book.log.tree</field>
            <field name="model">library.book.log</field>
            <field name="arch" type="xml">
                <tree string="log" version="7.0">
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="log_info"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>