       <record id="action_report_project_project_analysiss_tree" model="ir.actions.act_window">
            <field name="name">Project Analysis</field>
            <field name="res_model">report.project.project.analysis</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
            <field name="context">{'group_by_no_leaf':1,'group_by':[]}</field>
        </record>

        <menuitem action="action_report_project_project_analysiss_tree" id="menu_project_analysis_user_tree" parent="base.menu_project_report" sequence="2"/>

    </data>
</openerp>
