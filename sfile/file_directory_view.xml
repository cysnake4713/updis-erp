<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!--sfile.file.direcotry-->
        <record id="view_sfile_file_directory_management_tree" model="ir.ui.view">
            <field name="name">sfile.file.file.directory.management.tree</field>
            <field name="model">sfile.file.file</field>
            <field name="arch" type="xml">
                <tree string="Directory" version="7.0">
                    <field name="priority"/>
                    <field name="full_name"/>
                </tree>
            </field>
        </record>
        <record id="view_sfile_file_directory_management_form" model="ir.ui.view">
            <field name="name">sfile.file.directory.management.form</field>
            <field name="model">sfile.file.file</field>
            <field name="arch" type="xml">
                <form string="All Directory" version="7.0">
                    <sheet>
                        <group invisible="1">
                            <field name="is_directory"/>
                            <field name="is_vc"/>
                        </group>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="parent_id"/>
                                <field name="priority"/>
                            </group>
                            <group>
                                <field name="full_name"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Files">
                                <field name="child_ids" domain="[('is_directory','=',False)]" readonly="1"
                                       context="{'tree_view_ref':'sfile.view_sfile_file_tree','form_view_ref':'sfile.view_sfile_file_file_form','default_is_directory':False}"/>
                            </page>
                            <page string="Child Directories">
                                <field name="child_ids" domain="[('is_directory','=',True)]"
                                       context="{'tree_view_ref':'sfile.view_sfile_file_directory_management_tree','form_view_ref':'sfile.view_sfile_file_directory_management_form','default_is_directory':True}"/>
                            </page>
                            <page string="Access">
                                <field name="access_ids">
                                    <tree editable="bottom">
                                        <field name="group_id"/>
                                        <field name="perm_read"/>
                                        <field name="perm_write"/>
                                        <field name="perm_create"/>
                                        <field name="perm_unlink"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>