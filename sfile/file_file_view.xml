<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!--sfile.file.file-->
        <record id="view_sfile_file_tree_dir" model="ir.ui.view">
            <field name="name">sfile.file.file.directory.tree</field>
            <field name="model">sfile.file.file</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Files" version="7.0">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_sfile_file_tree" model="ir.ui.view">
            <field name="name">sfile.file.file.tree</field>
            <field name="model">sfile.file.file</field>
            <field name="arch" type="xml">
                <tree string="Files" version="7.0">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_sfile_file_file_form" model="ir.ui.view">
            <field name="name">sfile.file.file.form</field>
            <field name="model">sfile.file.file</field>
            <field name="arch" type="xml">
                <form string="Files" version="7.0">
                    <sheet>
                        <group invisible="1">
                            <field name="is_directory"/>
                        </group>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="parent_id" domain="[('is_directory','=',True)]"
                                       context="{'tree_view_ref':'sfile.view_sfile_file_directory_config_tree','form_view_ref':'sfile.view_sfile_file_directory_config_form','default_is_directory':True}"/>
                            </group>
                            <group>
                                <field name="full_name"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="is_deleted"/>
                                <field name="is_vc"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <field name="log_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>