<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="project_review_fuzerenqidong_form_form_view" model="ir.ui.view">
            <field name="name">project.review.fuzerenqidong.form.form.view</field>
            <field name="model">project.review.fuzerenqidong.form</field>
            <field name="arch" type="xml">
                <form string="fuzerenqidongshenpi" version="7.0">
                    <group string="项目信息" col="4">
                        <field name="gongzuodagang"/>
                        <field name="chuangyouxiangmu"/>
                        <field name="zhuantihuozixiang"/>
                        <field name="youfenbaofang"/>
                    </group>
                    <group string="人员分配">
                        <field name="shizhengxietiaoren_id"/>
                    </group>
                    <!-- <group string="通知设置">
                        <field name="send_email" />
                        <field name="send_sms" />
                    </group> -->
                    <group string="Review Comment">
                        <field name="review_log"/>
                        <field name="reviewer_id" domain="[('groups_id','=',%(group_up_project_jingyingshi)d)]"
                                />
                        <field name="comment"/>
                    </group>
                    <footer>
                        <button name="save" class="oe_highlight" string="Save"/>
                        <button name="fuzerenqidong_review_submit" string="启动" class="oe_highlight" type="object"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="project_project_fuzerenqidong_form_inherit" model="ir.ui.view">
            <field name="name">project.project.fuzerenqidong.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="edit_project_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_fuzerenqidong" string="负责人启动" states="fuzerenqidong" type="object"/>
                    <button name="fuzeren_reject" string="打回申请单" states="fuzerenqidong"/>
                </xpath>

            </field>
        </record>
    </data>
</openerp>
