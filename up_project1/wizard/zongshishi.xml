<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="project_review_zongshishishenpi_form_form_view" model="ir.ui.view">
            <field name="name">project.review.zongshishishenpi.form.form.view</field>
            <field name="model">project.review.zongshishishenpi.form</field>
            <field name="arch" type="xml">
                <form string="zongshishishenpi" version="7.0">
                    <group col="2">
                        <group colspan="2">
                            <group>
                                <field name="guanlijibie" required="1"/>
                                <field name="chenjiefuzeren_id" required="1" class="oe_no_button"
                                       options="{'no_open':True}"/>
                                <field name="zhuguanzongshi_id" class="oe_no_button"
                                       options='{"no_open": True}'
                                       attrs="{'invisible':[('guanlijibie','!=',u'院级')],'required':[('guanlijibie','=',u'院级')]}"
                                       domain="[('groups_id','=',%(group_up_project_zongshishi)d)]"/>

                            </group>
                            <group>
                                <field name="categories_id" class="oe_no_button" options='{"no_open": True}'
                                       attrs="{'invisible':[('is_tender_project','=',True)],'required':[('is_tender_project','=',False)]}"
                                       on_change="onchange_category_id(categories_id)"/>
                                <field name="categories_else"
                                       attrs="{'invisible':[('category_name','!=',u'其它')],'required':[('category_name','=',u'其它')]}"/>
                                <field name="is_tender_project" invisible="1"/>
                                <field name="category_name" invisible="1"/>
                            </group>
                        </group>

                        <!-- <group string="通知设置">
                            <field name="send_email" />
                            <field name="send_sms" />
                        </group>
                        <group string="Review Comment">
                            <field name="review_log"/>
                            <field name="reviewer_id" domain="[('groups_id','=',%(group_up_project_zongshishi)d)]"
                                    />
                            <field name="comment"/>
                        </group>-->
                    </group>

                    <footer>
                        <button name="save" class="oe_highlight" string="Save"/>
                        <button name="zongshishi_review_submit" string="提交所长" type="object"
                                class="oe_highlight" confirm="确定提交审批到所长?"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="project_project_zongshishi_form_inherit" model="ir.ui.view">
            <field name="name">project.project.zongshishi.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="edit_project_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_zongshishishenpi" class="oe_highlight"
                            groups="up_project.group_up_project_zongshishi" string="总师室审批申请单" states="zhidingfuzeren"
                            type="object"/>
                    <button name="jingyinshi_reject" string="打回申请单" groups="up_project.group_up_project_zongshishi"
                            states="zhidingfuzeren" type="object" confirm="确定打回经营室申请?"/>
                </xpath>
                <xpath expr="//div[@id='engineer']" position="replace">
                    <div attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen','zhidingfuzeren'])]}">
                        <table class="oe_form_group activetable">
                            <tbody>
                                <tr>
                                    <td rowspan="3">
                                        <div class="inline-item">类别:
                                            <field name="categories_id" readonly="1"
                                                   attrs="{'invisible':[('shifoutoubiao','=',True)]}"/>
                                            <field name="categories_else"
                                                   attrs="{'invisible':[('category_name','!=',u'其它')]}"
                                                   readonly="1"/>
                                        </div>
                                        <div class="inline-item">投标类别:

                                            <field name="toubiaoleibie"
                                                   attrs="{'invisible':[('shifoutoubiao','=',False)]}"
                                                   readonly="1"/>
                                        </div>
                                        <div class="inline-item">项目管理级别:
                                            <field name="guanlijibie" readonly="1"/>
                                        </div>
                                        <div class="inline-item">项目负责人:
                                            <field name="user_id" readonly="1"
                                                   attrs="{'invisible':[('state','in',['open','suozhangshenpi','zhidingbumen','zhidingfuzeren'])]}"/>
                                        </div>
                                        <div class="inline-item">主管总师:
                                            <field name="zhuguanzongshi_id" readonly="1"/>
                                        </div>
                                    </td>
                                    <td colspan="2">会签栏</td>
                                </tr>
                                <tr>
                                    <td>总师室</td>
                                    <td>
                                        <field name="zongshishi_submitter_id" readonly="1"/>
                                        <field name="zongshishi_submit_datetime" readonly="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>承接部门负责人</td>
                                    <td>
                                        <field name="director_approve"/>
                                        <field name="director_approve_time"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                    </div>
                    <group>
                        <field name="category_name" invisible="1"/>
                        <field name="shifoutoubiao" readonly="1" invisible="1"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</openerp>